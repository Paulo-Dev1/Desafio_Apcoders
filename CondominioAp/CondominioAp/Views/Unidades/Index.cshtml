@model IEnumerable<CondominioAp.Models.Unidades>

@{
    ViewData["Title"] = "Index";
}

<div class="bg-secondary p-3">

    <h1>Unidades</h1>

    <p>
        <a  class="btn btn-primary" asp-action="Create">Nova Unidade</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Identificacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Propietario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Condominio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inquilinos)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Identificacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Propietario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condominio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inquilinos.Email)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id_Unidade">Editar</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id_Unidade">Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_Unidade">Excluir</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
