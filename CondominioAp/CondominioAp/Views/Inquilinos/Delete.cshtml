@model CondominioAp.Models.Inquilinos

@{
    ViewData["Title"] = "Delete";
}

<div class="bg-secondary p-3">

    <h3>Tem Certeza que deseja excluir esse Inquilino?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Idade)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Idade)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Sexo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Sexo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Telefone)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id_Inquilino" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>
