@model IEnumerable<CondominioAp.Models.Despesas>

@{
    ViewData["Title"] = "Index";
}
<div class="bg-secondary p-3">
    <h1>Despesas</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Nova Despesa</a>
    </p>
    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo_Despesa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vencimento_Fatura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status_Pagamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unidades)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Despesa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vencimento_Fatura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status_Pagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unidades.Condominio)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id_Despesa">Editar</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id_Despesa">Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_Despesa">Excluir</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>